{% block field_widget %}
{% spaceless %}
    {% set type = type|default('text') %}
    <input type="{{ type }}" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
{% endspaceless %}
{% if data_uploadify is defined %}
    <script type="text/javascript">
    $("#{{id}}").uploadify({
        {{ data_uploadify|raw }}
    });
    </script>
{% endif %}
{% endblock field_widget %}